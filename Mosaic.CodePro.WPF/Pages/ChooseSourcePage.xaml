<Page x:Class="SensibleProgramming.CodePro.WPF.Pages.ChooseSourcePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SensibleProgramming.CodePro.WPF.Pages"
      xmlns:uc="clr-namespace:SensibleProgramming.CodePro.WPF.Usercontrols"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseSourcePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
           
        <uc:SourceOptions x:Name="ucSource" Grid.Row="0" HorizontalAlignment="Center"></uc:SourceOptions>
        <TextBlock Grid.Row="1"  HorizontalAlignment="Center" FontSize="18" >Generate code from the following option</TextBlock>
        <Button Grid.Row="2" Name="btnNext" Click="btnNext_Click" >Next</Button>
    </Grid>
</Page>
